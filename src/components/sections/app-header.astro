---
import {cn} from "@/lib/utils";
import {buttonVariants} from "@/components/ui/button";
import {Icon} from "astro-icon/components";
import {Image} from "astro:assets";

import type {AppData} from "@/types";

interface Props {
    data: AppData;
}

const {data} = Astro.props;
---

<section class="space-y-6 py-12 sm:py-20 lg:py-20">
    <div class="container flex max-w-5xl flex-col items-center gap-5 text-center">

        <Image
                class="object-cover object-center p-4"
                src="/images/cinexplore_logo.svg"
                alt="preview landing"
                width={140}
                height={140}
                loading="eager"
        />

        <h1 class="text-balance font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[66px] mt-6">
            <span class="text-gradient_indigo-purple font-extrabold">{data.title}</span>
        </h1>

        <p class="max-w-2xl text-balance leading-normal text-muted-foreground sm:text-xl sm:leading-8">{data.overview}</p>

        <div class="flex justify-center space-x-2 md:space-x-4">
            <a
                    href={data.url}
                    target="_blank"
                    rel="noreferrer"
                    class={cn(buttonVariants({size: "lg", rounded: "full"}), "gap-2")}
            >
                <Icon name="play-store" class="mr-2 size-6"/>
                <span>Download</span>
            </a>
        </div>
    </div>
</section>
