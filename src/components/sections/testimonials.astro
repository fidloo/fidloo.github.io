---
import HeaderSection from "./header-section.astro";
import type { AppData } from "@/types";

interface Props {
  testimonials: string[]
}

const { testimonials } = Astro.props;
---
{
  testimonials.length > 0 &&
  <section>
    <div class="container flex max-w-7xl flex-col gap-10 py-32 sm:gap-y-16">
      <HeaderSection
          label="Testimonials"
          title="What our users are sharing."
          subtitle="Discover the reviews from our delighted users worldwide."
      />

      <div class="column-1 gap-5 space-y-5 md:columns-2 lg:columns-3 xl:columns-4">
        {
          testimonials.map((item) => (
              <div class="break-inside-avoid">
                <div class="relative rounded-xl border bg-muted/25">
                  <div class="flex flex-col px-4 py-5 sm:p-6">
                    <div>
                      <q class="text-muted-foreground">{item}</q>
                    </div>
                  </div>
                </div>
              </div>
          ))
        }
      </div>
    </div>
  </section>
}

